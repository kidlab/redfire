<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<display-name>Red5  War</display-name>

	<context-param>
		<param-name>globalScope</param-name>
		<param-value>default</param-value>
	</context-param>

	<context-param>
		<param-name>parentContextKey</param-name>
		<param-value>default.context</param-value>
	</context-param>

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>/</param-value>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>WEB-INF/classes/*-web.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.red5.server.war.WarLoaderServlet</listener-class>
	</listener>

    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>

	<servlet>
		<servlet-name>redfireSummary</servlet-name>
		<servlet-class>com.ifsoft.iftalk.plugin.voicebridge.view.VoiceBridgeSummary</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>redfireSetting</servlet-name>
		<servlet-class>com.ifsoft.iftalk.plugin.voicebridge.view.VoiceBridgeSettings</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>redfireUserSummary</servlet-name>
		<servlet-class>com.ifsoft.iftalk.plugin.voicebridge.view.UserSummary</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>redfireProfileSummary</servlet-name>
		<servlet-class>com.ifsoft.iftalk.plugin.voicebridge.view.ProfileSummary</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>redfireProfileDetail</servlet-name>
		<servlet-class>com.ifsoft.iftalk.plugin.voicebridge.view.ProfileDetail</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>redfireInterestDetail</servlet-name>
		<servlet-class>com.ifsoft.iftalk.plugin.voicebridge.view.InterestDetail</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>redfireCallHistory</servlet-name>
		<servlet-class>com.ifsoft.iftalk.plugin.voicebridge.view.CallHistory</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>redfireSummary</servlet-name>
		<url-pattern>/voicebridge-summary</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>redfireSetting</servlet-name>
		<url-pattern>/voicebridge-settings</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>redfireUserSummary</servlet-name>
		<url-pattern>/voicebridge-user-summary</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>redfireProfileSummary</servlet-name>
		<url-pattern>/voicebridge-profile-summary</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>redfireProfileDetail</servlet-name>
		<url-pattern>/voicebridge-profile-detail</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>redfireInterestDetail</servlet-name>
		<url-pattern>/voicebridge-interest-detail</url-pattern>
	</servlet-mapping>	

	<servlet-mapping>
		<servlet-name>redfireCallHistory</servlet-name>
		<url-pattern>/voicebridge-call-history</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>gateway</servlet-name>
		<servlet-class>org.red5.server.net.servlet.AMFGatewayServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>rtmpt</servlet-name>
		<servlet-class>org.red5.server.net.rtmpt.RTMPTServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>gateway</servlet-name>
		<url-pattern>/gateway</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>screenshare</servlet-name>
		<servlet-class>com.ifsoft.redfire.servlets.JnlpServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>screenshare</servlet-name>
		<url-pattern>/screenshare</url-pattern>
	</servlet-mapping>
	
    <servlet-mapping>
        <servlet-name>rtmpt</servlet-name>
        <url-pattern>/fcs/*</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
		<servlet-name>rtmpt</servlet-name>
		<url-pattern>/open/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>rtmpt</servlet-name>
		<url-pattern>/idle/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>rtmpt</servlet-name>
		<url-pattern>/send/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>rtmpt</servlet-name>
		<url-pattern>/close/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
	</welcome-file-list>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Forbidden</web-resource-name>
			<url-pattern>/WEB-INF/*</url-pattern>
		</web-resource-collection>
		<auth-constraint />
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Forbidden</web-resource-name>
			<url-pattern>/persistence/*</url-pattern>
		</web-resource-collection>
		<auth-constraint />
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Forbidden</web-resource-name>
			<url-pattern>/streams/*</url-pattern>
		</web-resource-collection>
		<auth-constraint />
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Forbidden</web-resource-name>
			<url-pattern>/lib/*</url-pattern>
		</web-resource-collection>
		<auth-constraint />
	</security-constraint>
</web-app>